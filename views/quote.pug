extends layouts/layout.pug

block content
    .quote
        h3.body= quote.getBody()
        h4.author= quote.getAuthor()
        p.permalink
            span.pr-1 Condividi:
            small.link.pr-3= url(`/quote/${quote.getUuid()}`)
            i(aria-hidden="true")#quote-to-clipboard.fa.fa-clipboard.quoter-icon-button
            

append scripts
    
    if autoUpdate
        script(src="../js/autoupdate.js")
        
    script(src="../js/quote.js")
